<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/images.css" class="rel">

    <div class="row">
        <h1 class="text-center">Edit Trail</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/hikingTrails/<%= hikingTrail._id %>?_method=PUT" method="POST" enctype="multipart/form-data"
                novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title: </label>
                    <!-- name="hikingTrail[title]" helps to group info -->
                    <input class="form-control" type="text" id="title" name="hikingTrail[title]"
                        value="<%= hikingTrail.title %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location: </label>
                    <input class="form-control" type="text" name="hikingTrail[location]" id="location"
                        value="<%= hikingTrail.location %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="length">Length: </label>
                    <div class="input-group">
                        <input class="form-control" type="text" name="hikingTrail[length]" id="length" placeholder="0"
                            aria-label="length" aria-describedby="length-label" value="<%= hikingTrail.length %>" required>
                        <span class="input-group-text" id="length-label">Miles</span>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description: </label>
                    <textarea class="form-control" type="text" name="hikingTrail[description]" id="description" rows="8"
                        required><%= hikingTrail.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Add images...</label>
                    <div class="form-file custom-file">
                        <input type="file" name="images" id="images" class="form-control custom-file-input" multiple
                            onchange="previewMultiple(event)">
                        <label for="images" class="form-label custom-file-label"></label>
                    </div>
                    <div id="formFile">
                    </div>
                </div>
                <div class="mb-3">
                    <% hikingTrail.images.forEach(function (img, i) { %>
                        <img src="/images/<%= img.key %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[<%= i %>]"
                                value="<%= img.key %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Save</button>
                </div>

            </form>
            <a href="/hikingTrails/<%= hikingTrail._id %>">Back</a>
        </div>
    </div>