<% layout('layouts/boilerplate') %>
    <div id="cluster-map" class="mb-3"></div>
    <div class="container">
        <h1 class="mb-3">All Hiking Trails</h1>
        <% for (let hikingTrail of hikingTrails) { %>
            <div class="card border-0 mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (hikingTrail.images.length) { %>
                            <img class="img-fluid" alt="" src='/images/<%= hikingTrail.images[0].key %>'>
                            <% } else { %>
                                <img class="img-fluid" alt=""
                                    src="https://lh3.googleusercontent.com/p/AF1QipPl0KzMc-EVDFOHS7W10Gz6RPa1Kss4JZqszXa7=s680-w680-h510">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <%= hikingTrail.title %>
                        </h5>
                        <p class="card-text">
                            <%= hikingTrail.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= hikingTrail.location %>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/hikingTrails/<%= hikingTrail._id %> %>">View <%=
                            hikingTrail.title %>
                        </a>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const hikingTrails = { features: <%- JSON.stringify(hikingTrails) %> };
    </script>
    <script src="/javascripts/clusterMap.js"></script>